<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_list_item"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="1dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/imv_adfet_fetimage"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image" />

    <TextView
        android:id="@+id/txv_adfet_fetname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/imv_adfet_fetimage"
        android:text="Fertilizer name"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txv_adfet_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_adfet_fetname"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imv_adfet_fetimage"
        android:text="Fertilizer Type"
        android:textColor="@color/gray"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_adfet_state"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button_border"
        android:text="ADD" />

</RelativeLayout>