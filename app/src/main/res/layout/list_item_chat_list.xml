<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/imv_licl_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_black_24dp" />

        <ImageView
            android:id="@+id/imv_licl_state"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/txv_licl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imv_licl_image"
            android:text="Chamod Diyamantha"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txv_licl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_licl_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imv_licl_image"
            android:maxLines="2"
            android:text="Last message"
            android:textColor="@color/gray"
            android:textSize="12dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>