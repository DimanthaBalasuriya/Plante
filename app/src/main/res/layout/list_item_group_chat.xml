<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="10dp"
    android:elevation="1dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/imv_grup_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_group_black_24dp" />

        <TextView
            android:id="@+id/txv_grup_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imv_grup_image"
            android:text="Group title"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txv_grup_sendername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_grup_groupname"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imv_grup_image"
            android:text="Sender Name"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txv_grup_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_grup_groupname"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/txv_grup_sendername"
            android:singleLine="true"
            android:text="The Message"
            android:textColor="@color/gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txv_grup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_grup_sendername"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:text="The message"
            android:textColor="@color/colorBlack"
            android:textSize="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>