<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="5dp"
    android:background="@color/colorWhite"
    android:elevation="1dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_shop_image_profi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_store_mall_directory_black_24dp" />

    <TextView
        android:id="@+id/txv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imv_shop_image_profi"
        android:textColor="@color/colorBlack"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txv_shop_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_shop_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/imv_shop_image_profi"
        android:textColor="@color/gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txv_shop_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_shop_contact"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imv_shop_image_profi"
        android:textColor="@color/gray"
        android:textSize="12dp" />


</RelativeLayout>