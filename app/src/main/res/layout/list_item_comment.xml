<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/imv_comment_lit_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_usernot"/>

        <TextView
            android:id="@+id/txv_comment_list_username"
            android:layout_toRightOf="@+id/imv_comment_lit_user_image"
            android:text="Chamod"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txv_comment_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_comment_list_username"
            android:layout_toEndOf="@id/imv_comment_lit_user_image"
            android:text="dsadsadlaskdlasdalsdasldasldas"
            android:textColor="@color/gray"
            android:layout_toRightOf="@id/imv_comment_lit_user_image"/>

        <TextView
            android:id="@+id/txv_comment_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_comment_list_content"
            android:layout_toEndOf="@id/imv_comment_lit_user_image"
            android:layout_toRightOf="@id/imv_comment_lit_user_image"
            android:textColor="@color/gray"
            android:textSize="8dp"
            android:text="dsadaddads"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>