<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="100dp"
    android:background="@drawable/meassage_receiver"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txv_gct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_gct_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_gct_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="The message"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imv_gct_imagemessage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo_camera" />

    <TextView
        android:id="@+id/txv_gct_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_gct_message"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="Time"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBlack"
        android:textSize="10dp" />

</LinearLayout>